extends layout/site-layout--contacts
include modules/mixins

append config
    - var PageTitle         = "Контакты"
    - var MetaDesc          = "Meta Description for current page!!!"
    - var jQuery            = true
    - var updateBodyClass   = BodyClasses.push( 'extraclass', 'secondclass' )
    - var thisPage          = "Загородное строительство"
    - var PageTitle         = PageTitle.concat(' | ' + thisPage)
    
block content
    section.pagination-block
        .site-wrapper
            ul
                +navListItem( "Главная" )
                li
                    span Контакты

    .site-wrapper
        .contacts-info-block
            .contacts-info-block__contacts-header-container
                h1 Контактная информация
                .contacts-header-container__header-stripe

            .contacts-info-block__contacts-info-list
                .contacts-info-list__contact-item
                    span.contact-item__label Адрес
                    span.contact-item__info Санкт-Петербург<br> Невский пр., 147
                .contacts-info-list__contact-item
                    span.contact-item__label E-Mail
                    span.contact-item__info info@richnessrealty.ru
                .contacts-info-list__contact-item
                    span.contact-item__label Телефон
                    span.contact-item__info +7 812 340-00-48
                .contacts-info-list__contact-item
                    span.contact-item__label Факс
                    span.contact-item__info +7 812 340-00-48

        #contacts-info-map.contacts-info-map
            script(src="//api-maps.yandex.ru/2.0/?load=package.standard,package.traffic&lang=ru")
            script.
                ymaps.ready(init);
                function init() {
                    var coord = [59.925881, 30.378608];
                    var map = new ymaps.Map(
                            'contacts-info-map',
                            {
                                center: [59.925881, 30.378608],
                                zoom: 15, controls: ['mapTools']
                            });
                    var myPlacemark = new ymaps.Placemark(
                            coord,
                            {
                                'balloonContent': "Невский пр. 147",
                                'balloonHeader': "Санкт-Петербург, Невский пр. 147"
                            },
                            {
                                'iconImageHref': "images/icons/balloon.png",
                                'iconImageSize': [39, 58],
                                'iconImageOffset': [-20, -55]
                            });
                    map.geoObjects.add(myPlacemark);
                    map.controls.add('zoomControl');
                }